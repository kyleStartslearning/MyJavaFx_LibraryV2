<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="600.0" prefWidth="900.0" 
            style="-fx-background-color: #f5f5f5;" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="codes.Controllers.StudentController">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #e6f3ff, #cce6ff);">
         <children>
            <Label layoutX="172.0" layoutY="28.0" text="Library Management System" textFill="#0598ff">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
            
            <VBox alignment="CENTER" layoutX="350.0" layoutY="97.0" spacing="10">
               <FontAwesomeIconView fill="#0598ff" glyphName="USER" size="60" />
               <Label fx:id="userLabel" text="Welcome Student">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Label>
            </VBox>

            <Button layoutX="100.0" layoutY="250.0" maxWidth="220.0" mnemonicParsing="false" 
                    onAction="#BTNsearch" prefHeight="220.0" prefWidth="220.0" 
                    style="-fx-background-color: #0598ff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" 
                    text="Search Books" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="SEARCH" size="60" />
               </graphic>
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>

            <Button layoutX="340.0" layoutY="250.0" maxWidth="220.0" mnemonicParsing="false" 
                    onAction="#BTNborrowReturn" prefHeight="220.0" prefWidth="220.0" 
                    style="-fx-background-color: #0598ff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" 
                    text="Borrow / Return" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>

            <Button layoutX="580.0" layoutY="250.0" maxWidth="220.0" mnemonicParsing="false" 
                    onAction="#BTNlogOut" prefHeight="220.0" prefWidth="220.0" 
                    style="-fx-background-color: #0598ff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" 
                    text="Logout" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="SIGN_OUT" size="60" />
               </graphic>
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <FontAwesomeIconView fill="WHITE" glyphName="EXCHANGE" layoutX="412.0" layoutY="337.0" size="60" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>